    "hapi": "^17.5.1",
    "hapi-auth-jwt2": "^8.1.0",
    "hapi-require-https": "^3.0.0",
    "inert": "^5.1.0",
    "joi": "^13.4.0",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.10",
    "node-rsa": "^0.4.2",
    "pg": "^7.4.3",
    "pg-hstore": "^2.3.2",
    "retry-as-promised": "^2.3.2",
    "sequelize": "^4.37.10"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.5",
