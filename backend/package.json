{
  "name": "backend",
  "version": "1.0.0",
  "scripts": {
    "env": "[[ -z ${NODE_ENV} ]] && cp -f env/dev/.env . || cp -f env/${NODE_ENV}/.env .",
    "lint": "eslint --ext .js,.json src test/unit/specs",
    "serve:dev": "nodemon src/main.js --exec babel-node --presets es2015,stage-0",
    "dev": "npm-run-all lint env serve:dev",
    "build": "babel src -d dist --presets es2015,stage-0",
    "serve:prod": "node dist/main.js",
    "start": "npm-run-all lint env build serve:prod",
    "unit": "yarn run build && mocha --opts test/unit/mocha.opts test/unit/specs/",
    "test": "yarn run unit"
  },
  "dependencies": {
    "axios": "^0.15.0",
    "boom": "^4.1.0",
    "dotenv": "^2.0.0",
    "firebase": "^3.5.0",
    "hapi": "^15.1.1",
    "hapi-auth-jwt2": "^7.1.3",
    "hapi-plugin-co": "^0.9.3",
    "hapi-require-https": "^2.0.9",
    "inert": "^4.0.2",
    "joi": "^9.1.0",
    "jsonwebtoken": "^7.1.9",
    "node-rsa": "^0.4.2"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "chai": "^3.5.0",
    "eslint": "^3.7.1",
    "eslint-config-standard": "^6.2.0",
    "eslint-plugin-promise": "^3.0.0",
    "eslint-plugin-standard": "^2.0.1",
    "global-request-logger": "^0.1.0",
    "mocha": "^3.1.2",
    "nodemon": "^1.11.0",
    "npm-run-all": "^3.1.0",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0"
  }
}
