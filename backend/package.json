  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "lint": "eslint --ext .js,.json src test/unit/specs",
    "serve:dev": "nodemon src/main.js --exec babel-node",
    "dev": "npm-run-all lint serve:dev",
    "build": "babel src -d dist",
    "serve:prod": "node dist/main.js",
    "start": "npm-run-all lint build serve:prod",
    "unit": "yarn run build && mocha --opts test/unit/mocha.opts test/unit/specs/",
    "test": "yarn run unit"
  },
  "dependencies": {
    "axios": "^0.15.0",
    "boom": "^4.1.0",
    "firebase-admin": "^4.1.2",
    "glob": "^7.1.1",
