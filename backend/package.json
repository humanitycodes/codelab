{
  "name": "backend",
  "version": "1.0.0",
  "scripts": {
    "env": "[[ -z ${NODE_ENV} ]] && cp -f env/dev.env .env || cp -f env/${NODE_ENV}.env .env",
    "lint": "eslint --ext .js,.json src",
    "serve:dev": "nodemon src/main.js --exec babel-node --presets es2015,stage-2",
    "dev": "npm-run-all lint env serve:dev",
    "build": "babel src -d dist --presets es2015,stage-2",
    "serve:prod": "node dist/main.js",
    "start": "npm-run-all lint env build serve:prod"
  },
  "dependencies": {
    "axios": "^0.15.0",
    "boom": "^4.1.0",
    "dotenv": "^2.0.0",
    "firebase": "^3.4.1",
    "hapi": "^15.1.1",
    "hapi-auth-jwt2": "^7.1.3",
    "hapi-plugin-co": "^0.9.3",
    "hapi-require-https": "^2.0.9",
    "inert": "^4.0.2",
    "joi": "^9.1.0",
    "jsonwebtoken": "^7.1.9",
    "letsencrypt-express": "^2.0.3",
    "lodash": "^4.16.4",
    "querystring": "^0.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-eslint": "^7.0.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-stage-2": "^6.17.0",
    "eslint": "^3.7.1",
    "eslint-config-standard": "^6.2.0",
    "eslint-plugin-promise": "^3.0.0",
    "eslint-plugin-standard": "^2.0.1",
    "global-request-logger": "^0.1.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^3.1.0"
  }
}
