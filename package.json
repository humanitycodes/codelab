{
  "name": "codelab.cas.msu.edu",
  "private": true,
  "version": "1.0.0",
  "license": "Copyright",
  "author": "Humanity Codes, LLC",
  "homepage": "https://github.com/chrisvfritz/msu.lansing.codes#readme",
  "description": "Learning Management System for MSU Coding Courses",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chrisvfritz/msu.lansing.codes.git"
  },
  "bugs": {
    "url": "https://github.com/chrisvfritz/msu.lansing.codes/issues"
  },
  "scripts": {
    "install:backend": "cd backend && cross-env NODE_ENV=development yarn --pure-lockfile",
    "install:frontend": "cd frontend && cross-env NODE_ENV=development yarn --pure-lockfile",
    "install:firebase": "cd firebase && cross-env NODE_ENV=development yarn --pure-lockfile",
    "install:test": "cd test && cross-env NODE_ENV=development yarn --pure-lockfile",
    "postinstall": "npm-run-all install:* build-all deploy:firebase",
    "lint:backend": "cd backend && yarn run lint",
    "lint:frontend": "cd frontend && yarn run lint",
    "test:backend": "cd backend && yarn run test",
    "test:frontend": "cd frontend && yarn run test",
    "test:firebase": "cd firebase && yarn run test",
    "test:test": "cd test && yarn run test",
    "dev:backend": "cd backend && yarn run dev",
    "predev:frontend": "cd firebase && yarn run build:adapter && yarn run dev:deploy",
    "dev:frontend": "cd frontend && yarn run dev",
    "dev:ssl": "local-ssl-proxy --source 8080 --target 8181",
    "serve:backend": "cd backend && yarn run serve:prod",
    "build:backend": "cd backend && yarn run build",
    "build:frontend": "cd frontend && yarn run build",
    "lint-all": "npm-run-all --parallel lint:*",
    "test-all": "npm-run-all test:*",
    "dev-all": "npm-run-all --parallel dev:*",
    "build-all": "npm-run-all --parallel build:*",
    "serve-all": "npm-run-all --parallel serve:*",
    "start": "npm-run-all serve-all",
    "deploy:firebase": "cd firebase && yarn run deploy",
    "deploy:staging-to-production": "git fetch origin && git push --force origin origin/master:production",
    "deploy-force:local-to-staging": "git push --force ssh://git@heroku.com/msu-codes-staging.git `git rev-parse --abbrev-ref HEAD`:master",
    "deploy-force:local-to-production": "git push --force ssh://git@heroku.com/msu-lansing-codes.git `git rev-parse --abbrev-ref HEAD`:master",
    "ssl:renew": "sudo certbot certonly --manual -d codelab.cas.msu.edu && sudo heroku certs:update /etc/letsencrypt/live/msu.lansing.codes/fullchain.pem /etc/letsencrypt/live/msu.lansing.codes/privkey.pem --confirm msu-lansing-codes"
  },
  "dependencies": {
    "npm-run-all": "^3.1.0"
  },
  "devDependencies": {
    "cross-env": "^5.1.3",
    "local-ssl-proxy": "^1.3.0"
  },
  "engines": {
    "node": ">=8.9.4"
  },
  "cacheDirectories": [
    "~./yarn",
    "~/.cache/yarn"
  ]
}
