{
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "stylelint.enable": true,
  "eslint.enable": true,
  "eslint.options": {
    "extensions": [
      ".js",
      ".vue"
    ]
  },
  "eslint.packageManager": "yarn",
  "eslint.validate": [
    "javascript",
    "vue"
  ],
  "eslint.workingDirectories": [
    "./backend",
    "./frontend",
    "./test"
  ],
  "files.associations": {
    "*.css": "stylus",
    "*.ddl": "sql"
  }
}
