{
  "name": "firebase",
  "version": "1.0.0",
  "scripts": {
    "test": "jest src/**/*.spec.js",
    "lint": "eslint --ext .js,.json src",
    "build:rules": "babel-node src/build.js",
    "build:adapter": "babel src -d dist --presets es2015,stage-0",
    "postinstall": "yarn build:adapter",
    "predeploy": "yarn build:rules",
    "deploy": "firebase deploy --project ${NODE_ENV} --token `cat token`",
    "predev:deploy": "yarn build:rules",
    "dev:deploy": "firebase deploy --project ${USER} --token `cat token`"
  },
  "dependencies": {
    "js-beautify": "^1.6.4",
    "lodash": "^4.17.2"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.16.0",
    "eslint": "^3.11.1",
    "eslint-config-vue": "^2.0.1",
    "eslint-plugin-vue": "^1.0.0",
    "firebase-tools": "^3.1.0",
    "jasmine": "^2.5.2",
    "jest": "^17.0.3",
    "jest-cli": "^17.0.3"
  },
  "eslintConfig": {
    "extends": "vue",
    "globals": {
      "jasmine": false,
      "describe": false,
      "fdescribe": false,
      "it": false,
      "fit": false,
      "expect": false,
      "beforeEach": false,
      "afterEach": false,
      "spyOn": false
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "engines": {
    "node": ">=7.0.0"
  }
}
